@model IEnumerable<DeliveryService.Models.Entities.Delivery>

@{
    ViewData["Title"] = "My deliveries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deliveries</h2>

@if (Model.Count() != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Client
                </th>
                <th>
                    Status summary
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>

                        @Html.DisplayFor(model => @item.Client.FirstName)
                        @Html.ActionLink("See client details", "Details", "Clients", new { id = item.ClientID })
                    </td>
                    <td>
                        @Html.DisplayFor(model => @item.DeliveryStatus.Status)

                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@Html.ActionLink("Back to Dashboard", "Index", "DriverDashboard")
