@model DeliveryService.Models.Entities.ShippersDefaultPickUpAddress

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit default pick up address</h2>

<form asp-action="EditDefaultPickUpAddress">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="LineOne" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LineOne" class="form-control" />
                <span asp-validation-for="LineOne" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LineTwo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LineTwo" class="form-control" />
                <span asp-validation-for="LineTwo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="City" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PostCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PostCode" class="form-control" />
                <span asp-validation-for="PostCode" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Dashboard</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
