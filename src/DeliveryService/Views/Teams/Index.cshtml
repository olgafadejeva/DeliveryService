@model DeliveryService.Models.Entities.Team

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Drivers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Description)
            </td>
            <td>
                @foreach (var driver in Model.Drivers) {
                    @driver.ID
                }

            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@Model.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
                <a asp-action="AddDriver" asp-route-id="@Model.ID">AddDriver</a>

            </td>
        </tr>
}
        
    </tbody>
</table>