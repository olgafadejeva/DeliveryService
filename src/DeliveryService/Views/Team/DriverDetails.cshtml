@model DeliveryService.Models.Entities.Driver

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.NormalizedUserName)
        </dd>
        <dt>
            Number of deliveries
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Deliveries.Count)
        </dd>
        <dd>
            @Html.ActionLink("Delete", "DeleteDriver", "Team", Model.ID)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to Team</a>
</div>
