@using DeliveryService.Models.Entities
@model Driver

@{
    ViewData["Title"] = "My details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>My details</h1>

<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.User.Email)
    </dt>
    <dd>
        @Html.DisplayFor(model => model.User.Email)
    </dd>
    </dl>
    <br />
    <p class="btn btn-default">@Html.ActionLink("Manage my time off", "Index", "DriverHolidays")</p>
    <br />
    <h3>My address</h3>
    <a class="btn btn-default" asp-action="Edit" asp-route-id="@Model.Address.ID">Edit</a>
    @if (@Model != null)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Address.City)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.City)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Address.LineOne)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.LineOne)
            </dd>
            @if (@Model.Address.LineTwo != null)
            {

                <dt>
                    @Html.DisplayNameFor(model => model.Address.LineTwo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Address.LineTwo)
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.Address.PostCode)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Address.PostCode)
            </dd>
        </dl>

    }
    else
    {
        <p>
            <a class="btn btn-default" asp-action="Create">Add address</a>
        </p>
    }

    <br />
    <p class="btn btn-default">@Html.ActionLink("Back to dashoard", "Index", "DriverDashboard")</p>
