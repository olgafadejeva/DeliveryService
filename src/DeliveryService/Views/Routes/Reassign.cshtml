@model DeliveryService.Models.Entities.Route

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Reassign">
    <div class="form-horizontal">
        <h4>Route</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="DriverID" class="control-label col-md-2">Driver</label>
            <div class="col-md-10">
                <select asp-for="DriverID" class="form-control" asp-items="ViewBag.AssignedToID"></select>
                <span asp-validation-for="DriverID" class="text-danger" />
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to Routes</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
