@model IEnumerable<DeliveryService.Models.Entities.Vehicle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My vehicles</h2>

<p>
    <a asp-action="Create">Add New</a>
</p>
@if (Model.ToList().Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationNumber)
                </th>
                <th>Dimensions</th>
                <th>@Html.DisplayNameFor(model => model.MaxLoad)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                    </td>
                    <td>
                            @Html.DisplayFor(modelItem => item.Length) x
                            @Html.DisplayFor(modelItem => item.Height) x
                            @Html.DisplayFor(modelItem => item.Width)
                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxLoad)
                    </td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Options
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Edit" asp-route-id="@item.ID">Edit</a> </li>
                                <li class="list-group-item-danger"><a asp-action="Delete" asp-route-id="@item.ID">Delete</a></li>
                            </ul>
                        </div>

                </tr>
            }
        </tbody>
    </table>
}


@Html.ActionLink("Back to Dashboard", "Index", "DriverDashboard")