@using DeliveryService.Models.Entities;
@model IEnumerable<DeliveryService.Models.Entities.Delivery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deliveries</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() != 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                Client
            </th>
            <th>
                Status summary
            </th>
            <th>Driver</th>
            <th>Deliver by</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model)
{
        <tr>
            <td>

                @Html.ActionLink( item.Client.FirstName + " " + item.Client.LastName, "Details", "Clients", new  { id=item.ClientID})
            </td>
            <td>
                @Html.DisplayFor(model => @item.DeliveryStatus.Status)
            </td>
            <td>
                @if (@item.DeliveryStatus.AssignedToId == null)
                {

                    @Html.ActionLink("Assign delivery", "Assign", "ShipperDeliveries", new { id = item.ID })
                }
                else { 
                    @Html.DisplayFor(model=> @item.DeliveryStatus.AssignedTo.User.UserName)
                }

            </td>
            <td>
                @Html.DisplayFor(model => @item.DeliverBy)
            </td>
            <td>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        Options
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a asp-action="Edit" class="list-group-item" asp-route-id="@item.ID">Edit</a></li>
                        <li><a asp-action="Delete" class="list-group-item" asp-route-id="@item.ID">Delete</a></li>
                        <li><a asp-action="Details" class="list-group-item" asp-route-id="@item.ID">Details</a></li>

                        <li>
                            @Html.ActionLink("Map view", "MapDelivery", "Routes", new { id = @item.ID }, new { @class = "list-group-item" })

                        </li>
                    </ul>
                </div>

            </td>
        </tr>
}
    </tbody>
</table>
}
@Html.ActionLink("Back to Dashboard", "Index", "ShipperDashboard")
