@using DeliveryService.Models.Entities;
@model IEnumerable<DeliveryService.Models.Entities.Delivery>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deliveries</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() != 0)
{
<table class="table">
    <thead>
        <tr>
            <th>
                Client
            </th>
            <th>
                Status summary
            </th>
            
        </tr>
    </thead>
    <tbody>
        
@foreach (var item in Model)
{
        <tr>
            <td>

                @Html.DisplayFor(model => @item.Client.FirstName)
                @Html.ActionLink("See client details", "Details", "Clients", new { id = item.ClientID })
            </td>
            <td>
                @Html.DisplayFor(model => @item.DeliveryStatus.Status)
                @if (@item.DeliveryStatus.AssignedToId == null)
                {

                    @Html.ActionLink("Assign delivery", "Assign", "ShipperDeliveries", new { id = item.ID })
                }
                else { 
                    @Html.DisplayFor(model=> @item.DeliveryStatus.AssignedTo.User.UserName)
                }

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}
@Html.ActionLink("Back to Dashboard", "Index", "ShipperDashboard")
